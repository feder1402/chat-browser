{
  "manifest_version": 3,
  "name": "Cht Broswer",
  "version": "1.0",
  "description": "AI Broser companion for remembering, reading, and summarizing tab content",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chat Browser"
  }
}